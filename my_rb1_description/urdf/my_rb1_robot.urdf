<?xml version="1.0" ?>

<robot name="rb1">
    <!-- Link - base -->
    <link name="base_link">  
        <origin xyz="0 0 0" rpy="0 0 0"/>  
        <inertial>
            <mass value="25" />
            <inertia ixx="0.5781" ixy="0" ixz="0" iyy="0.5781" iyz="0" izz="0.7813" />
        </inertial>
        
        <collision>
            <geometry>
                <cylinder radius="0.25" length="0.3"/>
            </geometry>
        </collision>

        <visual>
            <geometry>
                <cylinder radius="0.25" length="0.3"/>
            </geometry>
            <material name="Blue">
                <color rgba="0 0 1 1" />
            </material>
        </visual>
    </link>
    
    <link name="base_footprint" />
    
    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <link name="left_wheel">
        <inertial>
            <mass value="1"/>
            <inertia ixx="0.00019" ixy="0" ixz="0" iyy="0.00019" iyz="0" izz="0.00031"/>
        </inertial>   

        <collision>
            <origin xyz="0 0 0" rpy= "1.5701 0 0" />
            <geometry>
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
        </collision>
        
        <visual>
            <origin xyz="0 0 0" rpy= "1.5701 0 0" />
            <geometry>
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
            <material name="Red">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>
    </link>
    
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0  -0.2 -0.15" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <link name="right_wheel">
        <inertial>
            <mass value="1"/>
            <inertia ixx="0.00019" ixy="0" ixz="0" iyy="0.00019" iyz="0" izz="0.00031"/>
        </inertial>   

        <collision>
            <origin xyz="0 0 0" rpy= "1.5701 0 0" />
            <geometry>
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
        </collision>
        
        <visual>
            <origin xyz="0 0 0" rpy= "1.5701 0 0" />
            <geometry>
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
            <material name="Red">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>
    </link>
    
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0  0.2 -0.15" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>
</robot>
