<?xml version="1.0" ?>

<robot name="robot">

    <!-- Link - base footprint -->
    <link name="base_footprint" />

    <!-- Link - base link -->
    <joint name="joint_base_link" type="fixed">
        <origin rpy="0 0 0" xyz="0.0 0.0 0.15" />
        <child link="base_link" />
        <parent link="base_footprint" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <link name="base_link">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>  
            <mass value="25" />
            <inertia ixx="0.5781" ixy="0" ixz="0" iyy="0.5781" iyz="0" izz="0.7813" />
        </inertial>
        
        <collision>
            <geometry>
                <cylinder radius="0.25" length="0.3"/>
            </geometry>
        </collision>

        <visual>
            <geometry>
                <cylinder radius="0.25" length="0.3"/>
            </geometry>
            <material name="Blue">
                <color rgba="0 0 1 1" />
            </material>
        </visual>
    </link>
      
    <!--Joint - left-wheel -->
    <joint name="joint_left_wheel" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0  -0.2 -0.15" rpy="0 0 0"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <limit effort="10000" velocity="1000" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <!-- Link - left wheel -->
    <link name="left_wheel">
        <inertial>
            <mass value="1"/>
            <inertia ixx="0.00019" ixy="0" ixz="0" iyy="0.00019" iyz="0" izz="0.00031"/>
        </inertial>   

        <collision>
            <origin xyz="0 0 0" rpy= "1.5701 0 0" />
            <geometry>
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
        </collision>
        
        <visual>
            <origin xyz="0 0 0" rpy= "1.5701 0 0" />
            <geometry>
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
            <material name="Red">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>
    </link>
    
    <!-- right-wheel -->
    <joint name="joint_chassis_right_wheel" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0  0.2 -0.15" rpy="0 0 0"/>
        <limit effort="10000" velocity="1000" />
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <joint_properties damping="1.0" friction="1.0" />
    </joint>

    <!-- Link - right wheel -->
    <link name="right_wheel">
        <inertial>
            <mass value="1"/>
            <inertia ixx="0.00019" ixy="0" ixz="0" iyy="0.00019" iyz="0" izz="0.00031"/>
        </inertial>   

        <collision>
            <origin xyz="0 0 0" rpy= "1.5701 0 0" />
            <geometry>
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
        </collision>
        
        <visual>
            <origin xyz="0 0 0" rpy= "1.5701 0 0" />
            <geometry>
                <cylinder radius="0.025" length="0.02"/>
            </geometry>
            <material name="Red">
                <color rgba="1 0 0 1"/>
            </material>
        </visual>
    </link>

    <!-- Joint - front-caster-wheel -->
    <joint name="front_castor_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="front_caster_wheel"/>
        <origin xyz="-0.1  0.0 -0.15" rpy="0 0 0"/>
        <joint_properties damping="1.0" friction="0.0" />
    </joint>
    <!-- Link - front caster wheel -->
    <link name="front_caster_wheel">
        <inertial>
            <mass value="1"/>
            <inertia ixx="0.000025" ixy="0" ixz="0" iyy="0.000025" iyz="0" izz="0.000025"/>
        </inertial>   

        <collision>
            <origin xyz="0 0 0" rpy= "0 0 0" />
            <geometry>
                <sphere radius="0.025" />
            </geometry>
        </collision>
        
        <visual>
            <origin xyz="0 0 0" rpy= "0 0 0" />
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
            <material name="Grey">
                <color rgba="0.5 0.5 0.5 1"/>
            </material>
        </visual>
    </link>

    <!-- Link - back caster wheel -->
    <joint name="back_caster_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="back_caster_wheel"/>
        <origin xyz="0.1  0.0 -0.15" rpy="0 0 0"/>
        <joint_properties damping="1.0" friction="0.0" />
    </joint>

    <link name="back_caster_wheel">
        <inertial>
            <mass value="1"/>
            <inertia ixx="0.000025" ixy="0" ixz="0" iyy="0.000025" iyz="0" izz="0.000025"/>
        </inertial>   

        <collision>
            <origin xyz="0 0 0" rpy= "0 0 0" />
            <geometry>
                <sphere radius="0.025" />
            </geometry>
        </collision>
        
        <visual>
            <origin xyz="0 0 0" rpy= "0 0 0" />
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
            <material name="Grey">
                <color rgba="0.5 0.5 0.5 1"/>
            </material>
        </visual>
    </link>

    <!-- Joint - Laser scan -->
    <joint name="front_laser_joint" type="fixed">
        <origin rpy="3.14159 0 0" xyz="0.25 0.0 0.075" />
        <child link="link_laser" />
        <parent link="base_link" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>
    
    <!-- Link - laser scan -->
    <link name="front_laser">
        <inertial>
            <origin xyz="0 0 0" rpy="1.5 0 0" />
            <mass value="1" />
            <inertia ixx="0.00104167" ixy="0" ixz="0" iyy="0.00104167" iyz="0" izz="0.00041667"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="1.5 0 0" />
            <geometry>
                <box size="0.05 0.05 0.1" />
            </geometry>
            <material name="Black">
                <color rgba="0.0 0.0 0.0 1" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="1.5 0 0"/>
            <geometry>
                <box size="0.05 0.05 0.1" />
            </geometry>
        </collision>
    </link>
    
</robot>
